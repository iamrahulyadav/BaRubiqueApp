<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bestdealfinance.bdfpartner">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="com.bestdealfinance.bdfpartner.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.google.android.c2dm.permission.SEND" />
    <uses-permission android:name="com.bestdealfinance.bdfpartner.permission.C2D_MESSAGE" />
    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rubiquelogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".database.IncomingSms">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ChangePassword"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.AboutUs"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.KnowMore"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.ForgotPassword"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.FAQ"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.ContactUs"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.ReferralActivity"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.DashBoard"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".activity.Product_Landing"
            android:configChanges="orientation|screenSize|screenLayout|touchscreen|keyboardHidden"
            android:parentActivityName=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.HomeActivity" />
        </activity>

        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.bestdealfinance.bdfpartner.gcm" />
            </intent-filter>
        </receiver>

        <service
            android:name=".GcmIntentService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.FinalCongrats"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_orange" />
        <activity
            android:name=".activity.OffersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.Congrats_App"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_orange" />
        <activity
            android:name=".activity.ReferralDetailActivity"
            android:parentActivityName=".activity.DashBoard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestdealfinance.bdfpartner.activity.DashBoard" />
        </activity>
        <activity
            android:name=".activity.LoginRegSinglePage"
            android:label="@string/title_activity_login_reg_single_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.CongratulationScreen"
            android:label="@string/title_activity_login_reg_single_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.QuotesGroupActivity"
            android:label="@string/title_activity_quotes_group"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.OnBoardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AlternateOffersActivity"
            android:label="@string/title_activity_alternate_offers"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FinalSorry"
            android:label="@string/title_activity_final_sorry"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ApplicationCongrats"
            android:label="@string/title_activity_app_congrats"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.DeepLinkActivity"
            android:label="@string/title_activity_deep_link"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.TrainingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.YoutubeActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PdfActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.LeaderBoardActivity" />
        <activity android:name=".activity.PayoutCalculatorActivity"></activity>
    </application>

</manifest>