<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/speech_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Salary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/speech_no_field_for_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="No more fields available for speech"
        android:visibility="gone" />

    <EditText
        android:id="@+id/speech_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_border_grey"
        android:gravity="center_vertical"
        android:hint="(In numbers)"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/speech_mic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_corner_40_no_border_blue_filled"
            android:padding="7dp"
            android:src="@drawable/ic_microphone"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/speech_mic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Tap on mic to speak"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end">

        <Button
            android:id="@+id/speech_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/Red500" />

        <Button
            android:id="@+id/speech_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:text="@string/txt_next"
            android:textAllCaps="true"
            android:textColor="@color/Green700" />
    </LinearLayout>

</LinearLayout>