<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/dimen_5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutItemRootReminder"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="@dimen/dimen_10dp"
        >
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewLeadId_remminderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_14sp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewMessage_remminderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewStatus_remminderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/Blue500"
        />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Grey100"
            android:layout_marginTop="@dimen/dimen_5dp"
            />

        <RelativeLayout
            android:id="@+id/relatieLayoutActionReminderItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMessageItemReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to continue ? "
                android:layout_centerVertical="true"
                />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonYesReminderItem"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:text="YES"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            style="?attr/borderlessButtonStyle"
            android:textColor="@color/Blue500"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>