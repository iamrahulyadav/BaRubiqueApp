<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:clickable="true"
        style="@style/CardView.Light"
        android:background="@color/White"
        android:id="@+id/offer"

        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/bank_logo" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="NA"
                        android:layout_gravity="center"
                        android:gravity="top|center_horizontal"
                        android:lines="3"
                        app:typeface="thin"
                        android:id="@+id/title"
                        android:layout_weight="0.6"
                        android:textColor="@color/Black"
                        android:textSize="12sp"
                        />


                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="NA"
                        android:layout_weight="1"
                        app:typeface="regular"
                        android:textAllCaps="true"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:gravity="bottom|center_horizontal"
                        android:id="@+id/interest" />
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Interest"
                        android:layout_gravity="center"
                        android:gravity="top|center_horizontal"
                        app:typeface="thin"
                        android:layout_weight="1"
                        android:textColor="@color/head_gray"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/Black"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        >

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="E.M.I."
                            android:padding="5dp"
                            android:layout_gravity="left"
                            app:typeface="thin"
                            android:textColor="@color/head_gray"
                            android:textSize="12sp"
                            android:id="@+id/textView22" />

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="NA"
                            android:padding="5dp"
                            app:typeface="medium"
                            android:textAllCaps="true"
                            android:textColor="@color/Black"
                            android:textSize="14sp"
                            android:id="@+id/emi" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        >

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Tenure"
                            android:layout_gravity="left"
                            app:typeface="thin"
                            android:padding="5dp"
                            android:textColor="@color/head_gray"
                            android:textSize="12sp"
                            />

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="NA"
                            android:padding="5dp"
                            app:typeface="regular"
                            android:textAllCaps="true"
                            android:textColor="@color/Black"
                            android:textSize="14sp"
                            android:id="@+id/tenure" />
                    </LinearLayout>



                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        >

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="P. Fees"
                            android:padding="5dp"
                            android:layout_gravity="left"
                            app:typeface="thin"
                            android:textColor="@color/head_gray"
                            android:textSize="12sp"
                            />

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="NA"
                            app:typeface="regular"
                            android:textAllCaps="true"
                            android:padding="5dp"
                            android:textColor="@color/Black"
                            android:textSize="14sp"
                            android:id="@+id/p_fees" />
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/box_padding"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        >

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Eligible Amount"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="left"
                            app:typeface="thin"
                            android:textColor="@color/head_gray"
                            android:textSize="12sp"
                            />

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="10000"
                            android:gravity="left"
                            app:typeface="regular"
                            android:textAllCaps="true"
                            android:textColor="@color/Black"
                            android:textSize="15sp"
                            android:id="@+id/amount_eligible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Apply"
                                android:textSize="13sp"
                                android:paddingLeft="20dp"
                                android:textColor="@color/White"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/green_button"
                                android:paddingRight="20dp"
                                android:layout_gravity="right"
                                android:id="@+id/check_eligible"
                                />
                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/progressBar"
                                android:layout_gravity="center"
                                android:elevation="10dp"
                                android:visibility="gone"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:paddingTop="5dp"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/MyTurquoise"
                            android:textSize="14sp"
                            android:id="@+id/details" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>