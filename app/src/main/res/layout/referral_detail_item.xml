<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/seven"
    android:layout_gravity="center"
    cardView:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/status_character"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:layout_gravity="center"
                    android:text="R"
                    android:background="@drawable/hexagone"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/orange"
                    android:src="@drawable/default_person"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/seven"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                        android:id="@+id/leader_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:padding="@dimen/two"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:text="Anita"/>
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                        android:id="@+id/leader_join_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        android:padding="@dimen/two"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Joined in Jan 2015"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>