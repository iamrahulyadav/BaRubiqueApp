<LinearLayout
    android:id="@+id/layout_calculator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="Calculator"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/alt_cross"/>
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:name="android.support.design.widget.textInputLayout"
        android:layout_width="match_parent"
        android:id="@+id/textinputlayout_product"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/payout_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:focusable="false"
            android:hint="@string/product"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:name="android.support.design.widget.textInputLayout"
        android:layout_width="match_parent"
        android:id="@+id/textinputlayout_referral_type"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/payout_referral_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:focusable="false"
            android:hint="@string/referral_type"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:name="android.support.design.widget.textInputLayout"
        android:layout_width="match_parent"
        android:id="@+id/textinputlayout_amount"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/payout_loan_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:hint="Loan Amount"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/text_color_dark"
            android:textColorHint="@color/text_color"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_cal_payout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Calculate payout"
        />
</LinearLayout>