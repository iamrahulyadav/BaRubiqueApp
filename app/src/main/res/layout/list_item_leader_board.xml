<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/leader_board_user_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_dummy_image" />

    <TextView
        android:id="@+id/leader_board_user_ranking"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_filled_blue_round"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/Grey50"
        android:textSize="8dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/leader_board_user_image"
        android:layout_toLeftOf="@+id/leader_board_layout_user_points"
        android:layout_toRightOf="@+id/leader_board_user_image"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/leader_board_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="RameshRameshRameshRameshRameshRamesh"
            android:textColor="@color/Grey900"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/leader_board_user_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="9sp" />

        <TextView
            android:id="@+id/leader_board_user_joined_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined on Jan 2015"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leader_board_layout_user_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leader_board_user_leads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="450"
            android:textColor="@color/Blue500"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leads"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/leader_board_user_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/Grey200"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>