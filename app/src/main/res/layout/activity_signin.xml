<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSigninRoot"
    >

    <include
        android:id="@+id/toolbarProfile"
        layout="@layout/toolbar_new"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_border_blue_bottom"
                android:padding="10dp"
                android:text="LOGIN"
                android:textColor="@color/Grey900"
                android:textSize="14sp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_border_grey"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/login_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Please enter email / mobile"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/login_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:digits="1234567890"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_email"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_filled_blue"
                android:text="@string/login"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/login_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/txt_or" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_border_blue_bottom"
                android:padding="10dp"
                android:text="@string/register"
                android:textColor="@color/Grey900"
                android:textSize="14sp" />

            <LinearLayout

                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_border_grey"
                android:orientation="vertical">

                <!--<EditText
                    android:id="@+id/edittextUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:digits="1234567890"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/Grey100" />-->


                <EditText
                    android:id="@+id/register_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:digits="1234567890"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/Grey100" />

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_email"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/promo_code_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/do_you_have_registration_code"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/apply_btn_popup"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_apply_code"
                    android:textColor="@color/Green500" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                >

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/tncBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I accept"

                    />

                <TextView
                    android:id="@+id/tncLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" terms and conditions."
                    android:textColor="@color/Blue500" />


            </LinearLayout>
            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_filled_blue"
                android:text="@string/register"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/register_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="12sp" />


        </LinearLayout>

    </ScrollView>
    <!--<include
        android:id="@+id/otp_layout"
        layout="@layout/layout_otp" />-->
</RelativeLayout>
