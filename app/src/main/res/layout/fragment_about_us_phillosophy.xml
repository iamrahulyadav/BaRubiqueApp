<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
        android:id="@+id/philosophy_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/seven"
        android:textSize="@dimen/twenty"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_philosophy"
        android:scrollbars="vertical"
        android:paddingLeft="@dimen/twelve"
        android:paddingRight="@dimen/twelve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:id="@+id/waiting_layout"        >
        <ImageView
            android:id="@+id/waiting"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</LinearLayout>
