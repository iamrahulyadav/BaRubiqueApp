<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/seven"
    android:layout_gravity="center"
    cardView:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/seven"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <!--<ImageView-->
                    <!--android:layout_width="@dimen/thirty"-->
                    <!--android:layout_height="@dimen/thirty"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@drawable/default_person"/>-->
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/two"-->
                    <!--android:orientation="vertical">-->
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                        android:id="@+id/leader_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Anita"/>
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                        android:id="@+id/leader_join_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/seven"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Joined in Jan 2015"/>
                <!--</LinearLayout>-->
            </LinearLayout>
            <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                android:id="@+id/leader_location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/twelve"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Mumbai"/>
            <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                android:id="@+id/leader_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/twelve"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Rs. 70,000"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>