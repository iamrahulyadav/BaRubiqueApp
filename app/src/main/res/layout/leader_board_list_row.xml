<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/leader_board_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_dummy_image" />

    <TextView
        android:id="@+id/leader_board_user_ranking"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/Grey50"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="1"
        android:background="@drawable/custom_filled_blue_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/leader_board_user_image"
        android:layout_toRightOf="@+id/leader_board_user_image"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/leader_board_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramesh"
            android:textColor="@color/Blue600"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/leader_board_user_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mumbai"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/leader_board_user_joined_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined on Jan 2015"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leader_board_layout_user_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leader_board_user_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="635"
            android:textColor="@color/Orange500"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/leader_board_user_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/Grey200"
        android:textSize="10sp" />

</RelativeLayout>