<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/seven"
    android:layout_marginLeft="@dimen/seven"
    android:layout_marginRight="@dimen/seven"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/seven"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/fifty"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/seven"
                    android:src="@drawable/login"/>

                <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                    android:id="@+id/ofr_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="12.80%"
                    android:padding="@dimen/seven"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:text="Interest"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EMI"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/seven"/>
                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:id="@+id/ofr_emi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8500"
                            android:layout_marginLeft="@dimen/seven"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tenure"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/seven"/>
                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:id="@+id/ofr_tenure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="24 months(2 yrs)"
                            android:layout_marginLeft="@dimen/seven"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fees"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/seven"/>
                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:id="@+id/ofr_fees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1.50%"
                            android:layout_marginLeft="@dimen/seven"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Eli. Amount"
                            android:textColor="@color/dark_gray"
                            android:padding="@dimen/seven"/>
                        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                            android:id="@+id/ofr_eligible_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rs. 25000"
                            android:layout_marginLeft="@dimen/seven"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_boarding_apply"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/orange"
                        android:text="Apply Now"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/seven"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/seven"
                        android:text="View Details"
                        android:gravity="right"/>
                </LinearLayout>
            </LinearLayout>
            <!--<com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine-->
                <!--android:id="@+id/philosophy_tag"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/twenty_five"-->
                <!--android:textColor="@color/black"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="@dimen/twelve"/>-->
            <!--<com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine-->
                <!--android:id="@+id/philosophy_content"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/fifteen"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/twelve"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
