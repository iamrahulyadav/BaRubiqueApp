<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/meeting_date_background"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/Green400" />

            <TextView
                android:id="@+id/meeting_date"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="24\nOct"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/meeting_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amit Arya"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 - 10:00 AM"
                android:textColor="@color/Grey500" />

            <TextView
                android:id="@+id/meeting_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Rubique , 2nd Floor, B wing, Krislon House, Marwah Road, Marol, Andheri East, Mumbai, Maharashtra 400072"
                android:textColor="@color/Grey500"
                android:visibility="gone"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/meeting_call"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_call"
                    android:tint="@color/Blue500" />

                <ImageView
                    android:id="@+id/meeting_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_pencil"
                    android:tint="@color/Blue500" />

                <ImageView
                    android:id="@+id/meeting_map"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_map_marker"
                    android:tint="@color/Blue500"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/meeting_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/Blue500" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/Grey200" />
</LinearLayout>