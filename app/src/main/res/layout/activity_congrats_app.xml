<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fitsSystemWindows="true"
    tools:context="com.bestdealfinance.bdfpartner.activity.CongratulationScreen">

    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_height="match_parent">-->

        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/landing_height"
                    android:layout_alignParentTop="true"
                    android:id="@+id/toolbar_layout"
                    android:background="@color/bg_congrates"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/congrates">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/img_back"
                                    android:layout_width="@dimen/twenty"
                                    android:layout_height="@dimen/twenty"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_margin="@dimen/ten"
                                    android:src="@drawable/ic_arrow_left"/>
                                <!--<TextView-->
                                <!--android:id="@+id/txt_login_register"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="@string/tag_register"-->
                                <!--android:gravity="right|center_vertical"-->
                                <!--android:textColor="@color/white"-->
                                <!--android:textSize="@dimen/ten"/>-->
                            </LinearLayout>
                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee"/>
                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/ten"
                                android:layout_height="wrap_content"
                                android:text="CONGRATULATIONS!"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/fifteen"/>
                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/seven"
                                android:layout_marginLeft="@dimen/seven"
                                android:layout_marginRight="@dimen/seven"
                                android:text="Your Application is In Process"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:lines="2"
                                android:gravity="center"
                                android:textSize="@dimen/twelve"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/card_view_congo"
                    android:gravity="center"
                    android:layout_alignParentBottom="true">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/ten"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/ten"
                            android:layout_height="wrap_content">
                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/two"
                                android:textSize="@dimen/twelve"
                                android:textColor="@color/Black"
                                android:text="You Applied on behalf of"/>

                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/four"
                                android:textSize="@dimen/twelve"
                                android:id="@+id/loan_congo_name"
                                android:textColor="@color/Black"
                                android:text="NA"/>

                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/four"
                                android:textSize="@dimen/twelve"
                                android:textColor="@color/Black"
                                android:text="for"/>


                            <ImageView
                                android:layout_width="@dimen/eighty"
                                android:id="@+id/loan_congo_img"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/eighty"
                                android:src="@drawable/pl"/>
                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewDomine
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/four"
                                android:textSize="@dimen/twelve"
                                android:id="@+id/loan_congo_txt"
                                android:textColor="@color/OrangeRed"
                                android:text="NA"/>

                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/four"
                                android:textSize="@dimen/ten"
                                android:textColor="@color/Black"
                                android:text="Application ID is"/>
                            <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/four"
                                android:textSize="@dimen/twelve"
                                android:id="@+id/app_id"
                                android:textColor="@color/Black"
                                android:text="2012"/>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/White"
                                android:textColor="@color/Blue"
                                android:textSize="@dimen/twelve"
                                android:elevation="@dimen/seven"
                                android:id="@+id/make_another"
                                android:text="MAKE ANOTHER REFERRAL"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_marginRight="@dimen/ten"
                                android:padding="@dimen/four"/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_congrates"
                                android:textColor="@color/White"
                                android:elevation="@dimen/seven"
                                android:textSize="@dimen/twelve"
                                android:layout_marginTop="@dimen/seven"
                                android:id="@+id/dashboard"
                                android:text="SHOW ALL REFERRALS"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_marginRight="@dimen/ten"
                                android:padding="@dimen/four"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    <!--</RelativeLayout>-->
</android.support.design.widget.CoordinatorLayout>
