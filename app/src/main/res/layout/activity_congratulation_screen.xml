<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fitsSystemWindows="true"
    tools:context="com.bestdealfinance.bdfpartner.activity.CongratulationScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/waiting_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/waiting"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:layout_gravity="center" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/payout_layout"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="155dp"
                    android:background="@drawable/custom_button_white_border_flat"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/payout_wait"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/congo_payout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/Black"
                        android:textSize="20dp"
                         />

                    <TextView
                        android:id="@+id/payout_loan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:padding="1dp"
                        android:text=""
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                         />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/bg_congrates"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/congrates"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_back"
                                    android:layout_width="@dimen/twenty"
                                    android:layout_height="@dimen/twenty"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_arrow_left" />
                                <!-- <TextView -->
                                <!-- android:id="@+id/txt_login_register" -->
                                <!-- android:layout_width="match_parent" -->
                                <!-- android:layout_height="wrap_content" -->
                                <!-- android:text="@string/tag_register" -->
                                <!-- android:gravity="right|center_vertical" -->
                                <!-- android:textColor="@color/white" -->
                                <!-- android:textSize="@dimen/ten"/> -->
                            </LinearLayout>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/txt_review_and_confirm"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/msg_for_congratulation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/congratulation_helper_text"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/card_view_congo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar_layout"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        style="@style/CardView.Light"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"

                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="20dp"
                                android:text="@string/congratulation_helper_text2"
                                android:textColor="@color/Black" />

                            <ImageView
                                android:id="@+id/loan_congo_img"
                                android:layout_width="110dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"

                                android:src="@drawable/pl" />

                            <TextView
                                android:id="@+id/loan_congo_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/OrangeRed"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/loan_congo_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="Name of your Lead:"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/loan_congo_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="Email:"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/loan_congo_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="Phone Number:"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/loan_congo_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:text="Amount"
                                android:textColor="@color/Black" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Orange50"
                    android:layout_below="@+id/card_view_congo"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/hide_unregistered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp">

                            <TextView
                                android:id="@+id/earn_more_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:lines="2"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="@string/congratulation_helper_application"
                                android:textColor="@color/Grey800"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/paybarwait2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <Button
                            android:id="@+id/make_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_button_white_filled_flat"
                                android:text="@string/txt_proceed_to_application"
                            android:textColor="@color/OrangeRed"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/just_refer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/custom_button_orange_filled_flat"
                        android:text="@string/txt_confirm_referral"
                        android:textColor="@color/White"
                        android:textSize="12sp" />
                </LinearLayout>


            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>