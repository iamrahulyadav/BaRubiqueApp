            android:layout_weight="1">

        </android.support.v7.widget.AppCompatSpinner>
-->

    </LinearLayout>

    <ListView
        android:id="@+id/payout_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


