<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dashboard_leader_board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP PERFORMERS"
            android:textColor="@color/Grey900"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="14sp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_see_details_of_leader_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="end|center"
            android:text="See Details"
            android:textColor="@color/Grey600"
            android:textSize="11dp"
            app:backgroundTint="@color/Grey600"
            android:layout_marginRight="-8dp"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_dashboard_leader_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
</LinearLayout>
