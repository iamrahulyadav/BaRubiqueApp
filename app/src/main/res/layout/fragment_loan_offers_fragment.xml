<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/failed_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fail"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView6" />

        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:id="@+id/failed_text"
            android:padding="10dp"
            android:text="Sorry, but we didn't find any loan offers based on the criteria supplied, Please try again."
            android:gravity="center"
            android:textColor="@color/text_color_dark"
            android:layout_margin="20dp"
            android:layout_above="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:id="@+id/offer_layout"
        android:visibility="gone"
        >


        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/header_text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:text="We Have Found Following Loan Offers based on the inputs provided"
            android:gravity="left"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_below="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_margin="3dp"

            android:layout_height="match_parent" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:id="@+id/waiting_layout"
        >
        <com.bestdealfinance.bdfpartner.UI.CustomTextViewProxima
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="20dp"
            android:gravity="center"
            android:text="Please wait while we are fetching best offers, this may take a while."
            android:id="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/waiting"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>
